{
	"name": "svelte-pocketbase-template",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev --host",
		"dev:backend": "cd pb && modd",
		"backend": "cd pb && ./pocketbase serve --http=0.0.0.0:8090",
		"build": "vite build",
		"build:backend": "cd pb && go build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"typegen": "pocketbase-typegen --db ./pb/pb_data/data.db --out ./src/lib/pocketbase-types.ts",
		"update-deps": "npx npm-check-updates -u && npm install",
		"update-deps:interactive": "npx npm-check-updates -i && npm install"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.38.0",
		"@inlang/paraglide-js": "^2.4.0",
		"@internationalized/date": "^3.10.0",
		"@lucide/svelte": "^0.546.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.47.3",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.15",
		"@tanstack/table-core": "^8.21.3",
		"@types/node": "^24",
		"bits-ui": "^2.14.0",
		"clsx": "^2.1.1",
		"embla-carousel-svelte": "^8.6.0",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-storybook": "^10.1.4",
		"eslint-plugin-svelte": "^3.12.5",
		"formsnap": "^2.0.1",
		"globals": "^16.4.0",
		"mode-watcher": "^1.1.0",
		"pocketbase-typegen": "^1.3.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"svelte": "^5.41.2",
		"svelte-check": "^4.3.3",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^3.1.1",
		"tailwindcss": "^4.1.15",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.2",
		"vaul-svelte": "^1.0.0-next.7",
		"vite": "^7.1.12"
	},
	"dependencies": {
		"@napi-rs/canvas": "^0.1.83",
		"@sentry/sveltekit": "^10.21.0",
		"@simplewebauthn/browser": "^13.2.2",
		"@sveltejs/adapter-node": "^5.4.0",
		"@toon-format/toon": "^2.1.0",
		"@xyflow/svelte": "^1.4.0",
		"date-fns": "^4.1.0",
		"lucide-svelte": "^0.546.0",
		"pdfjs-dist": "^5.4.449",
		"pocketbase": "^0.26.2",
		"svelte-sonner": "^1.0.5",
		"sveltekit-superforms": "^2.28.0",
		"zod": "^4.1.12"
	}
}
